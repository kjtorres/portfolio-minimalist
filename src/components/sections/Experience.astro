---
import Section from "@/components/Section.astro";
import { work } from "@cv";
---

<Section title="Experience">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, country }) => {
        const startYear = new Date(startDate).getFullYear();
        const startMonth =
          (new Date(startDate).getMonth() + 1).toString().padStart(2, "0") +
          "/";
        const endYear =
          endDate !== "" ? new Date(endDate).getFullYear() : "Present";
        const endMonth =
          endDate !== ""
            ? (new Date(endDate).getMonth() + 1).toString().padStart(2, "0") +
              "/"
            : "";
        const years = `${startMonth}${startYear} - ${endMonth}${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <>
                    <h3>
                      {name} <span>{country}</span>
                    </h3>
                  </>
                  <h4>{position}</h4>
                </div>
                <time>{years}</time>
              </header>
              <p>{summary || ""}</p>
              <footer />
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    font-weight: 500;
    color: #111;
  }
  article h3 span {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    display: inline-flex;
  }
  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 4px;
  }
  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>

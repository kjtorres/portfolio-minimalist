---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Projects" id="projects">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, urlActive }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    {urlActive && (
                      <a
                        href={url}
                        title={`See ${name} project`}
                        target="_blank"
                      >
                        {name}
                      </a>
                    )}
                    {!urlActive && <a>{name}</a>}
                    {isActive && <span>&bull;</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>;
                  })}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  article {
    border-radius: 6px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }
  article h3 {
    margin-bottom: 4px;
  }
  article h3 span {
    color: rgb(0, 188, 47);
  }
  article a {
    color: #111;
  }
  article a:hover {
    text-decoration: underline;
  }
  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    padding-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }
  footer span {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    display: inline-flex;
  }
</style>
